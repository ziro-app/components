    "parcel-bundler": "^1.12.3"
  },
  "dependencies": {
    "@emotion/core": "^10.0.27",
    "@ziro/currency-format": "^1.0.0",
    "@ziro/mask-input": "^1.0.0",
    "@ziro/theme": "^1.0.3",
    "docz": "^2.2.0",
    "framer-motion": "^1.7.3",
    "mapbox-gl": "^1.6.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-spring": "^8.0.27",
    "webfontloader": "^1.6.28",
    "wouter": "^2.4.0"
  },
